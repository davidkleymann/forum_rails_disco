<h1>Willkommen <%= params[:benutzername] %></h1>

<h2>Ihre letzten Posts</h2>

<table>
	<thead>
        <tr>
        	<th>Titel</th>
        	<th>Text</th>
        	<th>Zeit</th>
        </tr>
	</thead>
	<tbody>
        <% @lastposts.each do |post| %>
            <tr>
            	<td><%=post.title %></td>
            	<td><%=post.text %></td>
            	<td><%=post.time %></td>
        <% end %>    
	</tbody>
</table>

<%= link_to 'Nutzerdetails bearbeiten', edit_user_path(@user) %>

<% if @admin %>
  <h2>Aktuelle Nutzeranfragen</h2><br>
  <table>
    <thead>
      <tr>
        <th>Message</th>
        <th>Nutzer</th>
      </tr>
    </thead>
    <tbody>
      <% @adminmessages.each do |amessage| %>
        <tr>
          <td><%= amessage.message %></td>
          <td><%= amessage.user %></td>
        </td>
      <% end %>
    </tbody>
  </table>
<% end %>

