      <%= f.input :name, label: 'Name', placeholder: 'Name' %>
      <%= f.input :vorname, label: 'Vorname', placeholder: 'Vorname' %>
      <%= f.input :email, label: 'Email', placeholder: 'Email' %>
      <%= f.input :benutzername, label: 'Benutzername', placeholder: 'Benutzername' %>
      <%= f.input :passwort, as: :password, label: 'Passwort', placeholder: 'Passwort' %>
      

      <%= link_to 'ZurÃ¼ck zur Nutzerseite', userpage_users_path, class: 'btn btn-default' %>
