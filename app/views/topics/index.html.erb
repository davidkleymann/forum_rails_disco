<%= javascript_tag render partial: 'eventstream', formats: [:js], locals: {event_id: @event_id} %>
<h1>Listing topics</h1>


  <% if flash.any? %>
    <div id="error_explanation">
          <% flash.each do |name, msg| -%>
            <%= content_tag :div, msg, class: name %>
          <% end -%>
    </div>
  <% end -%>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.title %></td>
        <td><%= topic.user.benutzername %></td>
        <td><%= link_to 'Show', thema_topic_path(id: topic.id) %></td>
        <td><%= link_to 'Edit', edit_thema_topic_path(id: topic.id) %></td>
        <td><%= link_to 'Destroy', thema_topic_path(id: topic.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_thema_topic_path %>
