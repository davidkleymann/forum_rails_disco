<h1>TUDisco-Forum</h1>
<div id="header">
<img src="/assets/webbanner_home.png" >
</div>
<td><%= link_to 'Topics', topics_path %></td>
<td><%= link_to 'Admins', users_path, method: :userpage %></td>
<td><p>Newest Topics:</p></td>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>User</th>
      <th>Time</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @Latestposts.each do |topic| %>
      <tr>
        <td><%= topic.title %></td>
        <td><%= topic.text %></td>
        <td><%= topic.user_id %></td>
        <td><%= topic.time %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<td><p>Online Users:</p></td>