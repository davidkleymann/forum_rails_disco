<li class="post">
  <div class="user">
    <%= gravatar(post.user_id, 40, 40) %><br/>
    <%= post.benutzername %>
  </div>
  <div class="content">
    <div class="title"><%= post.title %></div>
    <div class="body"><%= post.text %></div>
    <div class="footer">
      Am <%= l post.created_at, format: :short %> von <%= post.benutzername %>
      <span class="pull-right">
        <%= link_to 'bearbeiten', edit_post_path(post) %> &middot;
        <%= link_to 'löschen', post, method: :delete, confirm: 'Willst du den Beitrag wirklich löschen?' %>
      </span>
    </div>
  </div>
  <div class="clearfix"></div>
</li>