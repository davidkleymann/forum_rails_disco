<div class="well">

  <%= simple_form_for([@topic, @post]) do |f| %>
    <%= f.hidden_field :topic_id %>

    <%= f.input :title, label: 'Titel', placeholder: 'Titel' %>
    <%= f.input :text, as: :text, label: 'Inhalt', placeholder: 'Inhalt' %>
    
    <span class="pull-right">
      <%= link_to 'Abbrechen', :back || topic_path(:topic_id), class: 'btn btn-default' %>
      <%= f.submit 'Absenden', class: 'btn btn-danger' %>
    </span>
    <div class="clearfix" />

  <% end %>
</div>