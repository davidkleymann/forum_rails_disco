<%= form_for(@post, url: posts_path) do |f| %>

  <%= f.hidden_field :topic_id %>
  <% if flash.any? %>
    <div id="error_explanation">
         <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
    <% end -%>
    
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </div>
  <div class="field">
    <%= f.label :time %><br>
    <%= f.datetime_field :time %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
