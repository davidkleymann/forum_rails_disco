<%= javascript_tag render partial: 'eventstream', formats: [:js], locals: {event_id: @event_id} %>
<h1>Übersicht über alle Posts</h1>


  <% if flash.any? %>
    <div id="error_explanation">
          <% flash.each do |name, msg| -%>
            <%= content_tag :div, msg, class: name %>
          <% end -%>
    </div>
  <% end -%>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>User</th>
      <th>Time</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post|
      ids = {thema_id: Topic.find(post.topic_id).thema_id, topic_id: post.topic_id, id: post.id} %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
        <td><%= User.find(post.user_id).benutzername %></td>
        <td><%= post.time %></td>
        <td><%= link_to 'Show', thema_topic_post_path(ids) %></td>
        <td><%= link_to 'Edit', edit_thema_topic_post_path(ids) %></td>
        <td><%= link_to 'Destroy', thema_topic_post_path(ids), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>Um zu Posten, bitte über die Themen gehen! 
<%= link_to 'Themenuebersicht', themas_path %>
