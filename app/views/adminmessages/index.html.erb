<%= javascript_tag render partial: 'eventstream/eventstream', formats: [:js], locals: {event_id: @event_id} %>
<h1>Listing adminmessages</h1>

<table class="table">
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @adminmessages.each do |adminmessage| %>
      <tr>
        <td><%= adminmessage.message %></td>
        <td><%= adminmessage.user.benutzername %></td>
        <td><%= link_to 'Show', adminmessage %></td>
        <td><%= link_to 'Edit', edit_adminmessage_path(adminmessage) %></td>
        <td><%= link_to 'Destroy', adminmessage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neue Nachricht an Admin senden', new_adminmessage_path, class: 'btn btn-danger' %>
