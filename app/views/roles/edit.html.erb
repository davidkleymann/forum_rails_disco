<div class="col-sm-6 col-xs-offset-3">
  <h1>Rolle des Nutzer ändern</h1>

  <div class="well">
   
<%= form_tag({controller: "roles", action: "update"}, method: "put", class: 'form-horizontal', role: 'form') do %>
   
  <div class="form-group"> 
  <%= label_tag :typ_0, "Normaler Nutzer", class: 'col-sm-4' %>   
  <%= radio_button_tag :typ, "0", class: 'col-sm-4' %>
  </div>
  <div class="form-group">
  <%= label_tag(:typ_1, "Forum-Moderator", class: 'col-sm-4') %>
  <%= radio_button_tag(:typ, "1", class: 'col-sm-4') %>
  </div>

  <div class="pull-right">
    <%= submit_tag "Änderungen speichern", class: 'btn btn-danger'%>
    <%=link_to "Zurück zur Nutzerübersicht", user_path(id: 1), class: 'btn btn-default' %>
  </div> 
  <div class="clearfix" />
<% end %>
   

  </div>
</div>